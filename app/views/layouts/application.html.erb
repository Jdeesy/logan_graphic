<!DOCTYPE html>
<html>
  <head>
    <title>LoganGraphic</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="container-fluid">
      <div class="row">
        <div class="col-md-2">
          <%= image_tag("main-logo.png", :alt => "LoganGraphic") %>
        </div>

        <div class="col-md-4">
          USEFUL INFOMATION
        </div>

        <div class="col-md-6">
          <div class="row">
            <div class="col-md-2">About Us</div>
            <div class="col-md-2">Products</div>
            <div class="col-md-2">Learning Center</div>
            <div class="col-md-2">Where to buy</div>
            <div class="col-md-2"></div>
            <div class="col-md-2">Search</div>
          </div>
        </div>
      </div>
    </header>

    <div class="container-fluid">
      <%= yield %>
    </div>

    <footer class="container-fluid">
      <div class="row">
        <div class="col-md-3">Products</div>
        <div class="col-md-3">Learning</div>
        <div class="col-md-3">More Info</div>
        <div class="col-md-3">Contact Us</div>
      </div>
    </footer>
  </body>
</html>
